<!--pages/comment/index.wxml-->

<!-- <open-data type="userAvatarUrl"></open-data>
<open-data type="userNickName"></open-data> -->

<button wx:if="{{canIUse}}" open-type="getUserInfo" bindgetuserinfo="bindGetUserInfo">授权登录</button>
<view wx:else>请升级微信版本</view>

{{canIUse}}

<!--  -->
<view class="" style="flex-direction:column;">
  <view class="item">

    <view class="main">

      <view class='item-title'>{{imgData.title}}</view>
      <view class='item-pic' wx:for="{{imgData.imgList}}" wx:for-item="img" wx:key="">
        <view wx:if="{{img.type != 4}}">
          <image mode="widthFix" bindload='imageLoad' src="{{img.imgUrl}}"></image>
        </view>
        <view wx:if="{{img.type == 4}}">
          <video src='{{img.imgUrl}}' style='width:100%;  {{img.nh}}'

controls='{{false}}'
autoplay=true
loop=true
muted=true


></video>

        </view>

      </view>
    </view>
  </view>
</view>

<!--  -->
<view>
  <view>
    <view>精彩评论</view>
  </view>
  <view wx:for="{{commentList}}" wx:for-item="item" wx:key="">
    <view>
      <!-- 头像图片 -->
      <view>
        <image style='width:60rpx; height: 60rpx;' src="{{item.headImg}}" background-size="cover"></image>
      </view>
      <!-- 内容 -->
      <view>
        <text>{{item.nickName}}</text>
        <text wx:if="{{item.toUser}}">回复</text>
        <text wx:if="{{item.toUser}}">{{item.toUser}}</text>
        
        <text>：</text>
        <view>
          {{item.text}}
        </view>
      
      </view>
    
    </view>
  
  </view>

</view>


<view class='btn-view'>
  <button type="primary" plain="true" bindtap="gotoLast" wx:if="{{hasLast}}">查看上一篇</button>
  <button type="primary" plain="true" bindtap="gotoNext" wx:if="{{hasNext}}">查看下一篇</button>
</view>


<view class="talk" bindtap="bindReply">回复</view>

<view class="release" hidden="{{!releaseFocus}}">
  <textarea class="text" 
      placeholder-class="input_null" 
      fixed="true" 
      maxlength="-1" 
      show-confirm-bar="false" 
      cursor-spacing="15" 
      auto-height="true" 
      focus="{{releaseFocus}}" 
      placeholder="回复 {{releaseName}}">
  </textarea>
  
  <view class="submit" wx:if="{{canIUse}}">发送</view>
  <view wx:else>评论？需先登录</view>
</view>


<view style="height:100rpx;">
  <!--占位-->
</view>
<cover-view class="toolbar">
  <cover-view class="goto-back" bindtap="goBack">返回</cover-view>
  <cover-view class="goto-back goto-home" bindtap="gotoHome">首页</cover-view>
</cover-view>
