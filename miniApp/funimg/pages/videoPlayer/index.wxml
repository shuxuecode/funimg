<!--pages/videoPlayer/index.wxml-->
<!-- 列表 -->
<view style="flex-direction:column;">
  <view class="item" wx:for="{{dataList}}" wx:key="">
    <view class="main" bindtap="gotoDetail" data-id="{{item.id}}" data-url="{{item.linkUrl}}" data-title="{{item.title}}" data-height="{{item.height}}" data-width="{{item.width}}" >
      <view class='item-title'>{{item.title}}</view>
      <view class='item-pic'>
        <video src='{{item.linkUrl}}' style='width:100%;' 
        controls='{{true}}' 
        >
        </video>
      </view>
    </view>
  </view>
</view>


<!-- 底部提示信息 -->
<view class="btm-view" hidden="{{nomore}}">
  <text>没有更多信息了</text>
</view>
