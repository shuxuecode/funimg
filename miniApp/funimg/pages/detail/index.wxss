/* pages/detail/index.wxss */

page {
  font-family: Arial, Helvetica, sans-serif;
}

/*  */

.item {
  margin-top: 30rpx;
}

.item .main {
  padding: 0rpx 10rpx;
}

.item .main .item-title {
  font-size: 28rpx;
  color: #329b64;
  margin-bottom: 10rpx;
}

image {
  width: 100%;
}

/* 底部操作栏start */

.toolbar {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 38rpx;
}

.toolbar .goto-back {
  width: 100%;
  padding: 25rpx 0;
}

/* 底部操作栏end */
