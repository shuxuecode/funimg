<!--miniprogram/pages/home/index.wxml-->

<view class="page">
  <view class="page__hd">
    <view class="page__title">Cell</view>
    <view class="page__desc">列表</view>
  </view>
  <view class="page__bd">
    <mp-cells ext-class="my-cells" title="带说明的列表项">
      <!-- <mp-cell value="标题文字" footer="说明文字"></mp-cell> -->
      <mp-cell wx:for="{{list}}" wx:key="id" data-id="{{item.id}}" bindtap="showImg">
        <view>
          <image mode="aspectFill" src="{{item.thumbnail}}" />
        </view>
        <view slot="footer">
          <view style="width: 400rpx; height: 200rpx; text-align: left;">
            <view>{{item.title}}</view>
            <text>这里放描述</text>
          </view>
        </view>
      </mp-cell>

    </mp-cells>


  </view>
</view>